global !p
def make_choices(val_string):
	choices = (x.strip() for x in val_string.split('\n'))
	choices = (re.sub(r'(\ |)=.*', '', x) for x in choices)
	vals = ('(%s, \'\')' % x.strip() for x in choices)
	return ',\n'.join((snip.mkline(x) for x in vals))
endglobal

